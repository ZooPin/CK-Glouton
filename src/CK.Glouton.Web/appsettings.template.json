{
  "Logging": {
    "PathFormat": "Logs/CK.Glouton-{Date}.txt",
    "IncludeScopes": false,
    "Debug": {
      "LogLevel": {
        "Default": "Warning",
        "Microsoft": "Information"
      }
    },
    "Console": {
      "LogLevel": {
        "Default": "Warning"
      }
    }
  },
  "Lucene": {
    "MaxSearch": "1000",
    "Path": "%localappdata%/Glouton/Logs",
    "Directory": ""
  },
  "TcpControlChannel": {
    "Host": "localhost",
    "Port": 33698,
    "IsSecure": false
  },
  "Database" : {
	"Path": "%localappdata%/Glouton/Alert" 
  }
}
